<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">
    
    <LinearLayout
        android:id="@+id/sign_in_logo_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="101dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/sign_in_logo"
            android:layout_height="43dp"
            android:layout_width="49dp"
            android:src="@drawable/sing_in_logo"

            />

        <TextView
            android:id="@+id/sign_in_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="31dp"
            android:textSize="30dp"
            android:fontFamily="@font/alegreya"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/white"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/sign_in_data_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="111dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_btns_group">
        <EditText
            android:id="@+id/email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/alegreya_sans"
            android:layout_marginBottom="40dp"
            />
        <EditText
            android:id="@+id/password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/alegreya_sans"
            android:hint="Пароль"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/sign_in_btns_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="127dp"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_data_group">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_btn"
            android:paddingVertical="16dp"
            android:textSize="25dp"
            android:text="Войти"
            android:fontFamily="@font/alegreya_sans"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="23dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/alegreya_sans"
            android:text="Зарегистрироваться" />

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_btn"
            android:paddingVertical="16dp"
            android:textSize="25dp"
            android:fontFamily="@font/alegreya_sans"
            android:text="Профиль"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>