<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="26dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/shape_quote_item"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quote_title"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/alegreya"
                android:text="Заголовок блока"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/quote_description"
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/alegreya"
                android:text="Кратенькое описание блока с двумя строчками"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/quote_more_button"
                android:layout_width="148dp"
                android:layout_height="39dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_more_details_button"
                android:fontFamily="@font/alegreya_sans"
                android:paddingHorizontal="32dp"
                android:paddingVertical="11dp"
                android:text="подробнее"
                android:textAllCaps="false"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/quote_image"
            android:layout_width="166dp"
            android:layout_height="111dp"
            android:layout_gravity="end"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="31dp"
            android:src="@drawable/calm" />
    </FrameLayout>



</RelativeLayout>